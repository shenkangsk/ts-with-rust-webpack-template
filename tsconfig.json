{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["dom", "es5", "scripthost"],
    "paths": {
      "@assets": ["assets/*"],
      "@src": ["src/*"],
      "@types": ["types/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}
